# Development Dockerfile
FROM node:20.17-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Don't copy any .env file - environment will be passed at runtime

# Expose development port
EXPOSE 3000

# Start development server with hot reload
CMD ["npm", "start"]
